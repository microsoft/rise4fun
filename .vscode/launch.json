    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}/website",
            "command": "nvm use 20 && yarn start",
            "name": "Run",
            "request": "launch",
            "type": "node-terminal",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/website",
            "program": "${workspaceFolder}/website/node_modules/.bin/docusaurus",
            "args": ["build"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}